<h1 class="team-name">
  <%= link_to(@team.name, show_info_path(id: @team)) %>
</h1>

<% if @team.github_url.present? %>
  <div class="pull-right">
    <a class="fab fa-github" style="color:purple;font-size: 4em"  href="<%= @team.github_url %>"></a>
  </div>
<% end %>

<br>

<h3 class="mt-3 pb-3 mb-4 font-italic border-bottom">
  Members
</h3><hr>

<div class="container">
  <% team_members(@team, current_user).each do |user| %>
    <%= render :partial => 'deck_card', locals: { user: user } %>
  <% end %>
</div>

<br><br>

<h3 class="mt-3 pb-3 mb-4 font-italic border-bottom">
  Tasks
</h3><hr>
<%= render :partial => 'task_queue' %>

<%= render :partial => 'history_queue' %>
<h3 class="mt-3 pb-3 mb-4 font-italic border-bottom">
  Invite
</h3><hr>

<div class="invite-container">
  <p><%= render 'invites/form' %></p>
</div>