<%- model_class = User -%>
<div class="page-header">
  <h1>Edit Profile</h1>
</div>

<%= simple_form_for @user, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              teams_path, :class => 'btn btn-default' %>
<% end %>
