<%= form_for @conversation, :html => { :class => "form-horizontal conversation" } do |f| %>

  <% if @conversation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@conversation.errors.count, "error") %> prohibited this conversation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @conversation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :sender_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sender_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sender_id) %>
  </div>
  <div class="form-group">
    <%= f.label :recipient_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :recipient_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:recipient_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                conversations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
